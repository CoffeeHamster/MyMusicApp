<SoundBoard>
    board: board
    slider: slide
    metro: metronome

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 1
            orientation: 'horizontal'
            Label:
                size_hint_x: 1.09
                text: '  Miniature\nSoundboard'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 3

                Button:
                    id: metronome
                    text: 'Metronome'
                    size_hint_x: 0.8
                    on_press: root.metB()
                Button:
                    id: threefour
                    text: '3/4'
                    size_hint_x: 0.8
                    on_press: root.timesig=3
                Button:
                    id: fourfour
                    text: '4/4'
                    size_hint_x: 0.8
                    on_press: root.timesig=4
                Button:
                    text: 'Record/Slider functionality\nwill be added in the future'
                    size_hint_x: 2

        BoxLayout:
            size_hint_y: 4
            orientation: 'horizontal'

            GridLayout:
                id: board
                cols: 5

                size_hint_x: 4


            Slider:
                id: slide
                size_hint_x: 2
                orientation: 'vertical'
                min: 0.2
                max: 8
                value: 3
